<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.cekpedia.cekpedia.MainActivity"
    android:background="#212121">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CekPedia"
        android:textSize="35dp"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teman terbaik untuk berpergian"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/editUser"
        android:background="#FFFFFF"
        android:layout_below="@+id/textView"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:hint="Username"/>


    <EditText
        android:id="@+id/editPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editUser"
        android:layout_alignStart="@+id/editUser"
        android:layout_below="@+id/editUser"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:background="#0277BD"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editPass"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckrm"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/btnLogin"
        android:textColor="#FFEE58"
        android:text="REMEMBER ME"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:textColor="#FFEE58"
        android:layout_marginRight="35dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:text="FORGOT PASSWORD ?"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckrm"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:text="DON'T HAVE AN ACCOUNT ?"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckrm"
        android:layout_alignParentRight="true"
        android:text="SIGN UP"
        android:layout_marginTop="30dp"
        android:layout_marginRight="95dp"
        android:textColor="#FFEE58"/>
</RelativeLayout>
